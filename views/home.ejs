<%- include("partials/header"); -%>
<h1>Home</h1>
<p><%= hContent %></p>


<% posts.forEach ((post) =>{ %>
  <h2><%= post.postTitle %></h2>
  <% console.log(post.postTitle) %>
<%  if(post.postBody.length >= 100){ %>
    <p><%= post.postBody.slice(0, 100) %>... <a href="/posts/<%= post.postTitle %> ">Read More</a></p>
  <% }else{ %>
  <p><%= post.postBody %></p>
  <% } %>
<% }); %>
<%- include("partials/footer"); -%>
